<div class="row bug_form">
	<div class="span6 offset3">

		<%= form_for(@bug) do |f| %>
			<%= render 'shared/error_messages', :object => f.object %>
		
		    <%= f.label :title %><br />
		    <%= f.text_field :title %>
		
		    <%= f.label :description %><br />
		    <%= f.text_area :description %>
		
		    <%= f.label :status %><br />
		    <%= f.text_field :status %>
		
		    <%= f.label :priority %><br />
		    <%= f.text_field :priority %>
		
		    <%= f.label :closed_by %><br />
		    <%= f.text_field :closed_by %>
		
		    <%= f.label :comment %><br />
		    <%= f.text_area :comment %>
		
			<%= f.submit "Create bug report", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
